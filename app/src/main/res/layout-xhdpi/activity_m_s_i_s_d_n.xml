<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    tools:context=".signinsignup.ui.MSISDNActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/logo"
                app:cardCornerRadius="75dp"
                android:layout_width="150dp"
                android:elevation="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:layout_height="150dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/login_top"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/welcome_text"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">
                <TextView
                    android:fontFamily="@font/opensans_light"
                    android:gravity="end"
                    android:layout_marginRight="5dp"
                    android:textSize="19sp"
                    android:text="WELCOME TO"
                    android:layout_width="0dp"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content"
                    android:layout_weight="57"/>

                <TextView
                    android:fontFamily="@font/opensans_bold"
                    android:gravity="start"
                    android:layout_marginLeft="2dp"
                    android:textSize="19sp"
                    android:text="E-EXAM"
                    android:textColor="@color/colorWhite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="43"/>


            </LinearLayout>

            <TextView
                android:id="@+id/welcome_text_2"
                android:gravity="center"
                android:textColor="#FFF"
                android:fontFamily="@font/opensans_light"
                android:text="CONNECT, SHARE &amp; LEARN"
                android:layout_below="@+id/welcome_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="60dp"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/welcome_text_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/opensans_bold"
                    android:textColor="@color/colorWhite"
                    android:text="PLEASE ENTER YOUR ROBI/AIRTEL NUMBER"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10"
                        android:orientation="horizontal">

                        <TextView
                            android:fontFamily="@font/opensans_bold"
                            android:textColor="@color/darkorange"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:text="+88"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:background="@color/darkorange"
                            android:layout_width="2dp"
                            android:layout_height="match_parent"/>

                        <EditText
                            android:hint="018*****"
                            android:id="@+id/etMSISDN"
                            android:paddingLeft="10dp"
                            android:fontFamily="@font/opensans_bold"
                            android:textColor="@color/darkorange"
                            android:textSize="18sp"
                            android:inputType="numberSigned"
                            android:backgroundTint="@android:color/transparent"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="8"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/btnSentOTP"
                    android:layout_marginTop="20dp"
                    android:elevation="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:fontFamily="@font/opensans_bold"
                        android:textColor="@color/colorWhite"
                        android:gravity="center"
                        android:text="SEND OTP"
                        android:textStyle="bold"
                        android:background="@color/darkorange"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:background="@drawable/rectangle_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/signinwithemail"
                        android:fontFamily="@font/opensans_bold"
                        android:padding="10dp"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:textColor="@color/colorWhite"
                        android:text="SIGN IN WITH EMAIL"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

    </ScrollView>




</RelativeLayout>