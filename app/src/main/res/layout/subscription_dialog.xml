<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:minHeight="350dp"
    android:layout_gravity="center"
    android:layout_marginLeft="55dp"
    android:layout_marginRight="55dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="265dp"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp"
            app:cardElevation="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:visibility="gone"
                    android:text="Subscription Alert !!!"
                    android:id="@+id/dialog_message_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:padding="15dp"
                    android:layout_above="@+id/footer"
                    android:id="@+id/dialog_message"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center"
                    android:textSize="16sp" />


                <LinearLayout
                    android:layout_above="@+id/footer2"
                    android:id="@+id/footer"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <TextView
                        android:id="@+id/subscribe"
                        android:textAlignment="center"
                        android:text="Subscribe"
                        android:layout_width="0dp"
                        android:textColor="@color/darkorange"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/otb"
                        android:textColor="@color/darkorange"
                        android:textAlignment="center"
                        android:text="OTB"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/cancel"
                        android:textColor="@color/darkorange"
                        android:textAlignment="center"
                        android:text="Cancel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/footer2"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <TextView
                        android:id="@+id/auto_renewel_text"
                        android:textAlignment="center"
                        android:text="(Auto renewal)"
                        android:layout_width="0dp"
                        android:textSize="9dp"
                        android:textColor="@color/colorAsh"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:textSize="9sp"
                        android:textColor="@color/colorAsh"
                        android:textAlignment="center"
                        android:text="(One Time Buy)"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:textColor="@color/darkorange"
                        android:textAlignment="center"
                        android:text=""
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>


                </LinearLayout>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <ImageView
        android:src="@drawable/logo"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="3dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        android:textStyle="bold" />
</FrameLayout>