<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    tools:context=".signinsignup.ui.MSISDNActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/logo"
        app:cardCornerRadius="1255dp"
        android:layout_width="250dp"
        android:elevation="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_height="250dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/login_top"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginBottom="130dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:fontFamily="@font/opensans_bold"
            android:textColor="@color/colorWhite"
            android:text="PLEASE ENTER YOUR ROBI/AIRTEL NUMBER"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/opensans_light"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:textSize="18sp"
                android:text="+88"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:background="@color/colorWhite"
                android:layout_width="2dp"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/etMSISDN"
                android:paddingLeft="10dp"
                android:fontFamily="@font/opensans_light"
                android:textColor="@color/colorWhite"
                android:text="01679636311"
                android:textSize="18sp"
                android:inputType="numberSigned"
                android:backgroundTint="@android:color/transparent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8.5"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnSentOTP"
            android:layout_marginTop="20dp"
            android:elevation="3dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:fontFamily="@font/opensans_light"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:text="SEND OTP"
                android:background="@color/darkorange"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>


</RelativeLayout>